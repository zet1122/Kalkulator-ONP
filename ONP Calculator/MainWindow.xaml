<Window x:Class="ONP_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ONP Calculator" Height="110" Width="400" KeyDown="Window_KeyDown"
        ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="inputText" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="260"  />
        <Button x:Name="calculateBtn" Content="Oblicz" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="75" Click="calculateBtn_Click"/>
        <TextBox x:Name="resultText" HorizontalAlignment="Left" Height="23" Margin="289,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"  IsReadOnly="True"/>

    </Grid>
</Window>
